<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:background="@drawable/bgd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nadu.myapplication.Signup">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:hint="                           User Name"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:id="@+id/UserName"
        android:textColorHint="#0048ff"
        android:background="#EDEEF1"
        android:alpha="0.40"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:hint="                           Consumer Number"
        android:ems="10"
        android:id="@+id/ConsumerNumber"
        android:textColorHint="#0048ff"
        android:background="#EDEEF1"
        android:alpha="0.40"
        android:textColor="#000000"
        android:layout_below="@+id/UserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="27dp"
        android:id="@+id/PhoneNumber"
        android:hint="                        Phone Number"
        android:textColorHint="#0048ff"
        android:background="#EDEEF1"
        android:alpha="0.40"
        android:textColor="#000000"
        android:layout_below="@+id/ConsumerNumber"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/PostalAddress"
        android:hint="                        Postal Address"
        android:textColorHint="#0048ff"
        android:background="#EDEEF1"
        android:alpha="0.40"
        android:textColor="#000000"
        android:layout_below="@+id/PhoneNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:hint="            password"
        android:textColorHint="#0048ff"
        android:background="#EDEEF1"
        android:alpha="0.40"
        android:textColor="#000000"
        android:ems="10"
        android:layout_below="@+id/PostalAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:id="@+id/PassWord" />

</RelativeLayout>

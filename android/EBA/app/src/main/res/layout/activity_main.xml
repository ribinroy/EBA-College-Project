<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgd"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">


    <TextView
        android:id="@+id/login_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="or"
        android:textSize="25sp"
        android:textStyle="bold"

        android:fontFamily="sans-serif"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="97dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="            Password"
        android:textColorHint="#000000"
        android:background="#EDEEF1"
        android:alpha="0.40"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText3"
        android:hint="                               Username"
        android:textColorHint="#000000"
        android:background="#EDEEF1"
        android:alpha="0.40"
        android:textColor="#000000"

        android:layout_marginBottom="36dp"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/whitelogo"
        android:id="@+id/imageView"
        android:layout_above="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/up"
        android:id="@+id/Consumersignup"
        android:backgroundTint="@android:color/transparent"
        android:layout_below="@+id/ConsumerLogin"
        android:layout_alignLeft="@+id/ConsumerLogin"
        android:layout_alignStart="@+id/ConsumerLogin"
        android:layout_marginTop="22dp"
        android:onClick="userreg"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/loginnew"
        android:id="@+id/ConsumerLogin"
        android:backgroundTint="@android:color/transparent"
        android:layout_above="@+id/login_title"
        android:layout_centerHorizontal="true"
        android:onClick="userlogin"/>


</RelativeLayout>
